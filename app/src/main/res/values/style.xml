<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Base Application Theme -->
	<style name="Theme.KeyboardApp" parent="Theme.Material3.DayNight.NoActionBar">

		<!-- Primary brand color -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryVariant">@color/primary_variant</item>
		<item name="colorOnPrimary">@color/on_primary</item>

		<!-- Secondary color -->
		<item name="colorSecondary">@color/secondary</item>
		<item name="colorSecondaryVariant">@color/secondary_variant</item>
		<item name="colorOnSecondary">@color/on_secondary</item>

		<!-- Background and surface -->
		<item name="android:windowBackground">@color/background</item>
		<item name="colorSurface">@color/surface</item>
		<item name="colorOnSurface">@color/on_surface</item>

		<!-- Status bar and navigation bar -->
		<item name="android:statusBarColor">@color/primary_dark</item>
		<item name="android:navigationBarColor">@color/background</item>

		<!-- Typography -->
		<item name="android:textColorPrimary">@color/on_surface</item>
		<item name="android:textColorSecondary">@color/on_surface_variant</item>

		<!-- Keyboard-specific styling placeholders -->
		<item name="keyboardBackground">@color/keyboard_background</item>
		<item name="keyboardKeyColor">@color/keyboard_key</item>
		<item name="keyboardKeyTextColor">@color/keyboard_key_text</item>

	</style>

	<!-- Light theme override -->
	<style name="Theme.KeyboardApp.Light" parent="Theme.KeyboardApp">
		<item name="android:windowBackground">@color/background_light</item>
		<item name="keyboardBackground">@color/keyboard_background_light</item>
	</style>

	<!-- Dark theme override -->
	<style name="Theme.KeyboardApp.Dark" parent="Theme.KeyboardApp">
		<item name="android:windowBackground">@color/background_dark</item>
		<item name="keyboardBackground">@color/keyboard_background_dark</item>
	</style>

</resources>