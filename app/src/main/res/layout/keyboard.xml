<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/keyboard_background"
    android:padding="4dp">

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView style="@style/KeyStyle" android:text="Q"/>
        <TextView style="@style/KeyStyle" android:text="W"/>
        <TextView style="@style/KeyStyle" android:text="E"/>
        <TextView style="@style/KeyStyle" android:text="R"/>
        <TextView style="@style/KeyStyle" android:text="T"/>
        <TextView style="@style/KeyStyle" android:text="Y"/>
        <TextView style="@style/KeyStyle" android:text="U"/>
        <TextView style="@style/KeyStyle" android:text="I"/>
        <TextView style="@style/KeyStyle" android:text="O"/>
        <TextView style="@style/KeyStyle" android:text="P"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:paddingStart="12dp">

        <TextView style="@style/KeyStyle" android:text="A"/>
        <TextView style="@style/KeyStyle" android:text="S"/>
        <TextView style="@style/KeyStyle" android:text="D"/>
        <TextView style="@style/KeyStyle" android:text="F"/>
        <TextView style="@style/KeyStyle" android:text="G"/>
        <TextView style="@style/KeyStyle" android:text="H"/>
        <TextView style="@style/KeyStyle" android:text="J"/>
        <TextView style="@style/KeyStyle" android:text="K"/>
        <TextView style="@style/KeyStyle" android:text="L"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            style="@style/KeyStyle"
            android:layout_weight="1.3"
            android:text="⇧"/>

        <TextView style="@style/KeyStyle" android:text="Z"/>
        <TextView style="@style/KeyStyle" android:text="X"/>
        <TextView style="@style/KeyStyle" android:text="C"/>
        <TextView style="@style/KeyStyle" android:text="V"/>
        <TextView style="@style/KeyStyle" android:text="B"/>
        <TextView style="@style/KeyStyle" android:text="N"/>
        <TextView style="@style/KeyStyle" android:text="M"/>

        <TextView
            style="@style/KeyStyle"
            android:layout_weight="1.3"
            android:text="⌫"/>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            style="@style/KeyStyle"
            android:layout_weight="1"
            android:text="sym"/>

        <TextView
            style="@style/KeyStyle"
            android:layout_weight="4"
            android:text=""/>

        <TextView
            style="@style/KeyStyle"
            android:layout_weight="1.5"
            android:text="⏎"/>
    </LinearLayout>

</LinearLayout>